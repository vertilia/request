{
  "name": "vertilia/request",
  "description": "Simple library to abstract requests (CLI, HTTP, etc.)",
  "license": "BSD-2-Clause",
  "type": "library",
  "autoload": {
    "exclude-from-classmap": [
      "/tests/"
    ],
    "psr-4": {
      "Vertilia\\Request\\": "src/"
    }
  },
  "config": {
    "optimize-autoloader": true,
    "platform": {
      "php": "7.4"
    }
  },
  "require": {
    "php": "^7.4",
    "vertilia/mime-type": "^1.0",
    "vertilia/valid-array": "^1.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5"
  }
}
